<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalheActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgFotoDoPrato"
            android:layout_width="wrap_content"
            android:layout_height="275dp"
            android:src="@drawable/tonysroma"
            android:scaleType="centerCrop" />
        <Button
            android:id="@+id/detalheBtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            app:icon="@drawable/ic_baseline_keyboard_backspace_24" />
        <TextView
            android:id="@+id/txtNomePrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/roboto_medium"
            android:paddingHorizontal="15dp"
            android:text="@string/salada_com_molho_gengibre"
            android:textColor="#fff"
            android:textSize="28sp"
            android:layout_marginBottom="5dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/txtDescricaoPrato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sed_ut_perspiciatis_unde_omnis_iste_natus_error_sit_voluptatem_accusant_doloremque_laudantium_totam_rem_aperiam_eaque_ipsa_quae_ab_illo_inventore_veritatis"
        android:justificationMode="inter_word"
        android:fontFamily="@font/roboto"
        android:paddingHorizontal="15dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>